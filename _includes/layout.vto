<html lang="id">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="light dark" />
    <title>{{title}} | NexInox</title>
    <link rel="preload" as="style" href="/style.css" />
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <header>
      <div class="container">
        <nav>
          <ul>
            <li>
              <a href="/" class="brand" data-tooltip="Beranda" data-placement="bottom">
                <img
                  class="avatar"
                  src="/images/profile_pic.jpg"
                  transform-images="avif webp jpg 80@2"
                  alt="NexInox's Icon"
                  width="80"
                  height="80"
                />
                <strong>NexInox</strong>
              </a>
            </li>
          </ul>
          <ul>
            <li>
              <form id="search-form">
                <input
                  type="search"
                  name="search"
                  placeholder="Cari"
                  aria-label="Cari"
                />
              </form>
            </li>
          </ul>
          <ul>
            <li>
              <a href="/peta/" aria-label="Peta Kuliner" data-tooltip="Peta Kuliner" data-placement="bottom">
                <img src="/icons/map.svg" inline />
              </a>
            </li>
            <li>
              <a href="https://instagram.com/nex_inox" target="_blank" rel="noreferrer noopener" aria-label="Instagram" data-tooltip="Instagram" data-placement="bottom">
                <img src="/icons/instagram.svg" inline />
              </a>
            </li>
          </ul>
        </nav>
      </div>
      <hr />
    </header>
    <main class="container">
      {{ content }}
    </main>
    <footer>
      <hr />
      <div class="container">
        <nav>
          <ul>
            <li>
              <small>Hak cipta NexInox &copy; {{ year }}</small>
            </li>
          </ul>
        </nav>
      </div>
    </footer>
    <dialog id="search-result">
      <article>
        <header>
          <button aria-label="Close" rel="prev"></button>
          <h3>Hasil Pencarian</h3>
        </header>
        <div aria-busy="true">
        </div>
      </article>
    </dialog>
    <script type="module" src="/script.js"></script>
  </body>
</html>